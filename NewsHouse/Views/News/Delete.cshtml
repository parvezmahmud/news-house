@model NewsHouse.Models.News

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="text-danger p-3">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NewsBody)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewsBody)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HeaderImage)
        </dt>

        <dd>
            <div class="mb-3 text-center">
                <img src="@Url.Content(Model.HeaderImage)" alt="Header Image" class="img-fluid rounded" style="max-height:200px;" />
            </div>
        </dd>
        <dd>
            <div class="mb-3">
                <h5 class="fw-bold">Author</h5>
                <p class="badge bg-warning text-dark p-2">@Html.Raw(Model.Author.FullName)</p>
            </div>
        </dd>
        <dd>
            <div class="mb-3">
                <h5 class="fw-bold">Categories</h5>
                @if (Model.Categories != null && Model.Categories.Any())
                {
                    foreach (var cat in Model.Categories)
                    {
                        <span class="badge bg-info text-dark me-1">@cat.CategoryTitle</span>
                    }
                }
                else
                {
                    <span class="text-muted">No categories assigned</span>
                }
            </div>
        </dd>
        <div class="mb-3">
            <h5 class="fw-bold">Tags</h5>
            @if (Model.Tags != null && Model.Tags.Any())
            {
                foreach (var tag in Model.Tags)
                {
                    <span class="badge bg-secondary me-1">@tag.TagsName</span>
                }
            }
            else
            {
                <span class="text-muted">No tags assigned</span>
            }
        </div>
        <dt>
            @Html.DisplayNameFor(model => model.IsArchived)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsArchived)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Published)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Published)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-sm btn-danger m-2" />
            @Html.ActionLink("Back to List", "Index", null, new {@class="btn btn-primary btn-sm"})
        </div>
    }
</div>
