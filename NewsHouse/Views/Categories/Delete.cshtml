@model NewsHouse.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="my-2">
            Category Name
        </dt>

        <dd class="badge bg-warning py-2 px-4">
            @Html.DisplayFor(model => model.CategoryTitle)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-sm btn-danger" /> 
            @Html.ActionLink("Back to List", "Index", null, new {@class="btn btn-info btn-sm "})
        </div>
    }
</div>
