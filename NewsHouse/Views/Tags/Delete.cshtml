@model NewsHouse.Models.Tags

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="text-dark fw-bold my-2">
            Tag Name
        </dt>

        <dd class="badge bg-warning py-2 px-4">
            @Html.DisplayFor(model => model.TagsName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new {@class="btn btn-sm btn-primary"})
        </div>
    }
</div>
