@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <!-- Hero Section -->
    <div class="jumbotron text-center bg-info text-white rounded-3 p-5 shadow-sm mb-5">
        <h1 class="display-4 fw-bold">Welcome to News Manager</h1>
        <p class="lead">Your one-stop platform to manage news, categories, and tags.</p>
        @Html.ActionLink("View All Articles", "Index", "News", null, new { @class = "btn btn-light btn-lg mt-3" })
    </div>

    <!-- Quick Links Section -->
    <h3 class="text-primary mb-4">Quick Access</h3>
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100 p-3">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Browse news by categories to find your favorite topics.</p>
                    @Html.ActionLink("View Categories", "Index", "Categories", null, new { @class = "btn btn-info btn-sm" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100 p-3">
                <div class="card-body">
                    <h5 class="card-title">Tags</h5>
                    <p class="card-text">Discover trending tags to follow breaking news stories.</p>
                    @Html.ActionLink("View Tags", "Index", "Tags", null, new { @class = "btn btn-info btn-sm" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100 p-3">
                <div class="card-body">
                    <h5 class="card-title">Recent News</h5>
                    <p class="card-text">Check out the most recent updates from all categories and tags.</p>
                    @Html.ActionLink("View All News", "Index", "News", null, new { @class = "btn btn-info btn-sm" })
                </div>
            </div>
        </div>
    </div>

</div>

